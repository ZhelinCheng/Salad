{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "no-unused-expression": true
  },
  "rules": {
    "max-classes-per-file": [
      true,
      10,
      "exclude-class-expressions"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "member-access": [
      false
    ],
    "ordered-imports": [
      false
    ],
    "max-line-length": [
      true,
      150
    ],
    "member-ordering": [
      false
    ],
    "interface-name": [
      false
    ],
    "arrow-parens": false,
    "object-literal-sort-keys": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "semicolon": [
      true,
      "never",
      "ignore-interfaces"
    ],
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "require-const-for-all-caps",
        "allow-snake-case"
      ]
    }
  },
  "rulesDirectory": []
}